<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SoulBoard - Your Private Feed</title>
    <style>
        /* Existing styles remain unchanged */
        /* Add these new styles */
        body {
            transition: background-color 0.5s ease;
        }

        .lock-screen {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: var(--background);
            z-index: 1000;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .export-btn {
            position: fixed;
            bottom: 20px;
            right: 20px;
            background: var(--secondary);
            padding: 10px 20px;
            border-radius: 25px;
            cursor: pointer;
        }

        .quote-refresh {
            cursor: pointer;
            margin-left: 10px;
            color: var(--primary);
        }

        .daily-reminder {
            text-align: center;
            color: var(--primary);
            margin-bottom: 1rem;
            font-style: italic;
        }
    </style>
</head>
<body>
    <div class="lock-screen" id="lockScreen" style="display: none;">
        <button onclick="checkPasscode()">Unlock SoulBoard</button>
    </div>

    <header>
        <h1>SoulBoard</h1>
        <p class="tagline">Your private feed • For your eyes only</p>
    </header>

    <div class="daily-reminder" id="dailyReminder"></div>

    <!-- Rest of existing HTML remains -->
    <div class="quote" id="daily-quote">
        <span id="quoteText"></span>
        <span class="quote-refresh" onclick="refreshQuote()">↻</span>
    </div>

    <div class="export-btn" onclick="exportEntries()">Keep My Soul 💾</div>

    <script>
        // Lock Mode
        const storedPasscode = localStorage.getItem('soulboardPasscode');
        if (storedPasscode) {
            document.getElementById('lockScreen').style.display = 'flex';
        }

        function checkPasscode() {
            const entered = prompt('Enter your soul key:');
            if (entered === storedPasscode) {
                document.getElementById('lockScreen').style.display = 'none';
            }
        }

        // Mood Tint Mapping
        const moodColors = {
            '😊': '#FFFBEB',
            '😐': '#F0F4FF',
            '😢': '#FFF5F5',
            '💡': '#F0FFF4',
            '🌪': '#F8F9FF'
        };

        // Enhanced Mood Selection
        document.querySelectorAll('.mood-btn').forEach(btn => {
            btn.addEventListener('click', () => {
                // ... existing code ...
                document.body.style.backgroundColor = moodColors[btn.textContent[0]];
            });
        });

        // Daily Reminder
        const lastEntryDate = localStorage.getItem('lastEntryDate');
        if (!lastEntryDate || new Date().toDateString() !== new Date(lastEntryDate).toDateString()) {
            document.getElementById('dailyReminder').textContent = "Your soul hasn't spoken today...";
        }

        // Export Function
        function exportEntries() {
            const exportData = entries.map(entry => 
                `${entry.date}\n${entry.mood}\n${entry.text}\n\n`
            ).join('');
            
            const blob = new Blob([exportData], { type: 'text/plain' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = `soulboard-${new Date().toISOString().split('T')[0]}.txt`;
            a.click();
        }

        // Enhanced Quote System
        function refreshQuote() {
            document.getElementById('quoteText').textContent = 
                quotes[Math.floor(Math.random() * quotes.length)];
        }

        // Update post creation to store last entry date
        document.querySelector('.post-btn').addEventListener('click', () => {
            // ... existing code ...
            localStorage.setItem('lastEntryDate', new Date().toISOString());
            document.body.style.backgroundColor = var(--background); // Reset background
        });

        // Initialize quote display
        document.getElementById('quoteText').textContent = 
            quotes[Math.floor(Math.random() * quotes.length)];
    </script>
</body>
</html>
